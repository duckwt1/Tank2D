<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.tank2d.client.ui.login.LoginController"
            prefWidth="400" prefHeight="320"
            style="-fx-background-color: linear-gradient(to bottom, #2b5876, #4e4376);">

    <VBox alignment="CENTER" spacing="10" layoutX="50" layoutY="50"
          prefWidth="300" prefHeight="220">
        <Text text="PIXEL TANK ONLINE" fill="white" style="-fx-font-size: 22px; -fx-font-weight: bold;" />
        <TextField fx:id="txtUsername" promptText="Username" />
        <PasswordField fx:id="txtPassword" promptText="Password" />
        <HBox alignment="CENTER" spacing="10">
            <Button fx:id="btnLogin" text="Login" prefWidth="100" onAction="#onLoginClick" />
            <Button fx:id="btnRegister" text="Register" prefWidth="100" onAction="#onRegisterClick" />
        </HBox>
        <Label fx:id="lblStatus" textFill="white" />
    </VBox>
</AnchorPane>